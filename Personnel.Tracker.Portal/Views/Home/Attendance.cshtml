@{
    ViewBag.PageTitle = "Home page";
}

<div class="ui vertical masthead center aligned segment">
    <div class="ui text container" id="attendances">
        <div class="ui inverted dimmer">
            <div class="ui text loader">Loading</div>
        </div>
        <p></p>
        <p></p>
    </div>

</div>

@section Scripts {
    <script src="~/js/attendance/attendance.js" asp-append-version="true"></script>

    <script id="tmp-personnel-records" type="text/x-jsrender">
        <table class="ui celled striped table">
            <thead>
                <tr>
                    <th colspan="3">
                        Attendances
                    </th>
                </tr>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        First Check In
                    </th>
                    <th>
                        Last Check Out
                    </th>
                </tr>
            </thead>
            <tbody>
                {{for Response}}
                <tr>
                    <td class="collapsing">
                        <i class="calendar icon"></i> <span class="date-text" data-value="{{:Date}}" data-format="date-only"> </span>
                    </td>
                    <td><span class="date-text" data-value="{{:FirstCheckIn}}"> </span></td>
                    <td><span class="date-text" data-value="{{:LastCheckOut}}"> </span></td>
                </tr>
                 {{/for}}
            </tbody>
        </table>
    </script>
     

}