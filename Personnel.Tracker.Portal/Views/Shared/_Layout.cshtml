<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>Personnel Portal - @ViewBag.PageTitle</title>

    <link href="~/lib/semantic-ui/dist/semantic.min.css" rel="stylesheet" />
    <link href="~/lib/waitMe/waitMe.min.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/semantic-ui/dist/semantic.min.js"></script>
    <script src="~/lib/waitMe/waitMe.min.js"></script>
    <script src="~/lib/jsrender/jsrender.min.js"></script>
    <script src="~/js/general.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)


</head>
<body>

    <div class="ui fixed inverted menu">
        <div class="ui container">
            <a href="#" class="header item">
                <img class="logo" src="/images/logo.png">
                Personnel Tracker
            </a>
            <a href="/home/index" class="item">Home</a>
            <div class="ui simple dropdown item">
                Attendance <i class="dropdown icon"></i>
                <div class="menu">
                    <a class="item" href="/home/attendance">Attendances</a>

                </div>
            </div>
            @if (CurrentPersonnel.Role == Personnel.Tracker.Model.Base.PersonnelRole.Admin.ToString())
            {
                <div class="ui simple dropdown item">
                    Admin <i class="dropdown icon"></i>
                    <div class="menu">
                        <a class="item" href="/admin/personnel">Personnel</a>
                        <a class="item" href="/admin/attendance">Attendances</a>
                    </div>
                </div>
            }

        </div>
    </div>

    <div class="ui main text container min-vh-75">
        @RenderBody()
    </div>

    <div class="ui inverted vertical footer segment fixed">
        <div class="ui center aligned container">
            <img src="/images/logo.png" class="ui centered mini image">
            <div class="ui horizontal inverted small divided link list">
                <a class="item" href="#">Tamer Alloh</a>
            </div>
        </div>
    </div>
</body>

</html>